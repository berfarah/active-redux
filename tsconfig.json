{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["es2017", "dom"],
  },
  "include": [
    "src/**/*.ts",
  ]
}
